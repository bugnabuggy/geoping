{
  // Server settings
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=aspnet-GeoPing.Api-local-Development;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "ServerHost": "http://Localhost:5000",

  // IdentityServer settings
  "IdentityServerSettings": {
    "AccessTokenLifetime": 2592000
  },

  // Email sender settings
  "isEmailConfirmationOn": false,

  "EmailConfiguration": {
    "SmtpServer": "FILL_IT_WITH_SMTP_SERVER",
    "UseAuthentication": true,
    "UseSecureConnection": true,
    "SmtpPort": 465,
    "SmtpUsername": "FILL_IT_WITH_SMTP_MAILNAME",
    "SmtpPassword": "FILL_IT_WITH_SMTP_PASSWORD"
  },

  // Logger settings
  "LoggerSettings": {
    "IncludeScopes": false,
    "LogLevelDefault": "Debug",
    "InternalLog": {
      "IsEnabled": true,
      "LogDirectory": "C:/logs/nlog-internal.log",
      "LogLevel": "Trace"
    },
    "Settings": {
      "FileSettings": {
        "LogDirectory": "${basedir}/log.log",
        "LogLevel": "Debug"
      },
      "SyslogSettings": {
        "Server": "logs7.papertrailapp.com",
        "Port": 51378,
        "LogLevel": "Debug"
      }
    }
  }
}
